# plomlompom's bashrc for non-login shells (root)

# Environment variables.
export EDITOR=nano

# Fancy colors for ls.
alias ls="ls --color=auto"

# Red prompt with time.
PS1="\[\e[1;31m\][\\t \\u@\\h \\w]$\[\e[m\] "
PS2="\[\e[1;31m\]>\[\e[m\] "
PS3="\[\e[1;31m\]>\[\e[m\] "
PS4="\[\e[1;31m\]+\[\e[m\] "
